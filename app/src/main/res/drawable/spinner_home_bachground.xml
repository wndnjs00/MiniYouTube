<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/clr_151718" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/clr_8A8A8A" />
                    <padding
                        android:bottom="6dp"
                        android:right="10dp"
                        android:top="6dp" />
                    <corners
                        android:radius="8dp" />
                </shape>
            </item>

            <item
                android:width="24dp"
                android:height="24dp"
                android:gravity="center|end" />
        </layer-list>
    </item>
</selector>